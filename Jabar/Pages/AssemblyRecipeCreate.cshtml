<h4>AssemblyRecipe</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AssemblyRecipe.ItemId" class="control-label"></label>
                <select asp-for="AssemblyRecipe.ItemId" class="form-control" asp-items="ViewBag.ItemName"></select>
            </div>
            <table class="table table-striped">
                <thead class="thead-dark">
                    <tr>
                        <th>
                            ItemId
                        </th>
                        <th>
                            RequiredAMT
                        </th>
                        <th>
                            RecipeLineId
                        </th>
                    </tr>
                </thead>
                <tbody>

                    @if (Model.Item.RecipeLines != null)
                    {

                        @foreach (var line in Model.Item.RecipeLines)
                        {
                            <tr class="border">
                                <td class="col-2">
                                    @Html.DisplayFor(modelItem => line.ItemId)
                                </td>
                                <td class="col-3">
                                    @Html.DisplayFor(modelItem => line.RequiredItemQty)
                                </td>
                                <td class="col-1">
                                    @Html.DisplayFor(modelItem => line.RecipeLineId)
                                </td>
                            </tr>
                        }
                    }

                </tbody>
            </table>
            <a asp-page="RecipeLineCreate" asp-route-ItemId="@Model.Item.ItemId">Add Item page</a>
            <a asp-action="" class="btn btn-dark" data-toggle="modal" data-target="#createAssemblyModal">Add Item</a>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

