@page
@model Jabar.Pages.Vendors.CreateModel
@{
    ViewData["Title"] = "New Vendor";
}

<h1 class="text-center p-4">New Vendor</h1>
<div class="row">
    <div class="col-md-12">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Vendor.VendorName" class="control-label">Name:</label>
                <input asp-for="Vendor.VendorName" class="form-control" />
                <span asp-validation-for="Vendor.VendorName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Vendor.VendorAddress" class="control-label">Address:</label>
                <input asp-for="Vendor.VendorAddress" class="form-control" />
                <span asp-validation-for="Vendor.VendorAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-success col-md-4" />
                <a asp-page="./Index" class="btn btn-outline-dark col-md-4 float-right">Cancel</a>
            </div>
        </form>
    </div>
</div>

<div>
    
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}