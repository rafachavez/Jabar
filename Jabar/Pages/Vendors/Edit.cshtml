@page
@model Jabar.Pages.Vendors.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Vendor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Vendor.VendorId" />
            <div class="form-group">
                <label asp-for="Vendor.VendorName" class="control-label"></label>
                <input asp-for="Vendor.VendorName" class="form-control" />
                <span asp-validation-for="Vendor.VendorName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Vendor.VendorAddress" class="control-label"></label>
                <input asp-for="Vendor.VendorAddress" class="form-control" />
                <span asp-validation-for="Vendor.VendorAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Vendor.LastModifiedBy" class="control-label"></label>
                <input asp-for="Vendor.LastModifiedBy" class="form-control" />
                <span asp-validation-for="Vendor.LastModifiedBy" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Vendor.LastModifiedDate" class="control-label"></label>
                <input asp-for="Vendor.LastModifiedDate" class="form-control" />
                <span asp-validation-for="Vendor.LastModifiedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
