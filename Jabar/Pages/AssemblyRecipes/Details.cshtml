@page
@model Jabar.Pages.AssemblyRecipes.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>AssemblyRecipe</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AssemblyRecipe.Item)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AssemblyRecipe.Item.ItemName)
        </dd>
    </dl>
</div>

<div>
    <form>
        <table class="table table-striped">
            <thead class="thead-dark">
                <tr>
                    <th>
                        Item
                    </th>
                    <th>
                        Description
                    </th>
                    <th>
                        Quantitiy
                    </th>

                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var line in Model.RecipeLines)
                {
                    //this is used to populate itemId on the page model...
                    //it allows the single Item to be selected
                    <input type="hidden" id="itemId" name="itemId" value="@line.ItemId." />

                    <tr class="border">
                        <td class="col-2">
                            @Html.DisplayFor(modelItem => line.Item.ItemName)
                        </td>

                        <td class="col-2">
                            @Html.DisplayFor(modelItem => line.Item.Description)
                        </td>
                        <td class="col-2">
                            @Html.DisplayFor(modelItem => line.RequiredItemQty)
                        </td>
                        <td>
                            <a asp-page="/RecipeLines/Delete" asp-route-id="@line.RecipeLineId" class="btn btn-dark">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </form>
</div>
<div>

    <a asp-page="/RecipeLines/Create" asp-route-RecipeId="@Model.AssemblyRecipe.AssemblyRecipeId" class="btn btn-dark">Add Item</a>
    @*<a asp-page="/RecipeLines/Create">Add Item</a> *@|
    <a asp-page="./Edit" asp-route-id="@Model.AssemblyRecipe.AssemblyRecipeId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
