@page
@model Jabar.Pages.Vendors.DeleteModel

@{
    ViewData["Title"] = "Delete Vendor";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h4>Delete Vendor</h4>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2 text-right">
            Name:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Vendor.VendorName)
        </dd>
        <dt class="col-sm-2 text-right">
            Address:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Vendor.VendorAddress)
        </dd>
    </dl>

    <hr />
    <h3 class="btn-outline-danger text-center">Are you sure you want to delete this vendor?</h3>
    <hr />

    <form method="post">
        <input type="hidden" asp-for="Vendor.VendorId" />
        <input type="submit" value="Delete" class="btn btn-danger col-3" />
        <a asp-page="./Index" class="btn btn-outline-dark float-right col-3">Cancel</a>
    </form>
</div>
