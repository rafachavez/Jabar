@page
@model Jabar.Pages.AssemblyRecipes.DeleteModel

@{
    ViewData["Title"] = "Delete Assembly";
}

<h1>Delete Assembly</h1>

<hr />
<h3 class="btn-outline-danger text-center">Are you sure you want to delete this Assembly?</h3>
<hr />

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AssemblyRecipe.Item)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AssemblyRecipe.Item.ItemId)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="AssemblyRecipe.AssemblyRecipeId" />
        <input type="submit" value="Delete" class="btn btn-danger col-3" />
        <a asp-page="/AssemblyRecipes/Details" asp-route-id="@Model.AssemblyRecipe.AssemblyRecipeId" class="btn btn-outline-dark col-3 float-right">Cancel - Back to Details</a>
    </form>

    <div>
    </div>
</div>
