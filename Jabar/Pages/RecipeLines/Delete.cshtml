@page
@model Jabar.Pages.RecipeLines.DeleteModel

@{
    ViewData["Title"] = "Delete Recipe Line";
}

<h1>Delete Assembly Recipe Line</h1>

<hr />
<h3 class="btn-outline-danger text-center">Are you sure you want to delete this recipe Line?</h3>
<hr />

<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RecipeLine.RequiredItemQty)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RecipeLine.RequiredItemQty)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RecipeLine.LastModifiedBy)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RecipeLine.LastModifiedBy)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RecipeLine.LastModifiedDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RecipeLine.LastModifiedDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RecipeLine.Item)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RecipeLine.Item.ItemId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RecipeLine.AssemblyRecipe)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RecipeLine.AssemblyRecipe.AssemblyRecipeId)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="RecipeLine.RecipeLineId" />
        <input type="submit" value="Delete" class="btn btn-danger col-3" />
        <a asp-page="/AssemblyRecipes/Details" asp-route-id="@Model.RecipeLine.AssemblyRecipe.AssemblyRecipeId" class="btn btn-outline-dark col-3 float-right">Cancel - Return to Recipe</a>
    </form>
</div>
